result = num1 + num2\n","  return result\n","\n","def sub(num1, num2):\n","  result = num1 - num2\n","  return result\n","\n","def multiply(num1, num2):\n","  result = num1 * num2\n","  return result\n","\n","def division(num1, num2):\n","  result = num1 / num2 if num2 != 0 else \"Error: Division by Zero\"\n","  return result\n","\n","def end():\n","  while True:\n","    break\n","\n","calculator_dict = {\n","    '+': add,\n","    '-': sub,\n","    '*': multiply,\n","    '/': division,\n","}\n","\n","def calculator():\n","  print(\"\\nWelcome to Mobo's calculator program!\\n\\nEnter a number and start calculating now!\")\n","  try:\n","    num1 = float(input(\"\\nEnter the first number: \"))\n","  except ValueError:\n","    print(\"\\nEnter a valid number\")\n","    calculator()\n","  print(\"\\nThe available operations are as follows:\")\n","  for symbol in calculator_dict.keys():\n","    print(symbol)\n","  print(\"End: to exit the program\")\n","  should_continue = True\n","  while should_continue:\n","    operation_symbol = (input(\"\\nChoose an operation symbol from the above: \").upper())\n","    if operation_symbol == 'END':\n","      break\n","    elif operation_symbol not in calculator_dict:\n","      print(\"\\nInvalid operation symbol. Please try again.\")\n","      continue\n","    try:\n","      num2 = float(input(\"\\nEnter the second number: \"))\n","    except ValueError:\n","      print(\"\\nEnter a valid number\")\n","      print(f\"\\nYour first number is {num1}.\\n\\nPlease choose the operation symbol again and enter a valid second number as math operations can't be carried out on letters.\")\n","      continue\n","    calculation_function = calculator_dict[operation_symbol]\n","    result = calculation_function(num1, num2)\n","    print(f\"\\n{num1} {operation_symbol} {num2} = {result}\")\n","    continue_choice = (input(\"\\nDo you want to continue with this result? (yes/no): \").upper())\n","    if continue_choice.upper() == 'YES':\n","      n